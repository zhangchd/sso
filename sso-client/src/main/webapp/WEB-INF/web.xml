<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>sso-client</display-name>
    <filter>
        <filter-name>SSOAuth</filter-name>
        <filter-class>com.sso.filter.SSOAuthFilter</filter-class>
        <init-param>
            <param-name>SSOService</param-name>
            <param-value>http://passport.sso.com:8080/sso-service/SSOAuth</param-value>
        </init-param>
        <init-param>
            <param-name>SSOLogin</param-name>
            <param-value>http://passport.sso.com:8080/sso-service/login.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>cookieName</param-name>
            <param-value>SSOID</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SSOAuth</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SSOAuth</filter-name>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>
</web-app>
